@import '_colorsfontsstyles.styl'

#home-display-boxes
  // flexbox tut: https://www.youtube.com/watch?v=G7EIAgfkhmg
  display flex
  flex-wrap wrap
  max-width 64rem
  justify-content center
  margin 2rem auto
  > div
    box-shadow lightGreyShadow
    border 1px solid navBarNavy
    margin 0 .5rem 1rem
    width 20rem
    height 15rem
    text-align center
    @media (max-width: 40rem)
      width 25rem
      margin .5rem auto
      min-width 16rem 
    > table
      display inline-block
      width 100%
      height 12.35rem
      overflow-y scroll
      font-family slimBlocky
      font-size 1rem
      color blue
      background-color lightRed 
      border-top 1px solid navBarNavy
      > tbody
        display inline-block
        width 100%
        >tr
          border-bottom 1px solid navBarNavy
          display inline-block
          width 100%
          > td  
            display inline-block
            line-height 1.7rem
            overflow-wrap break-word
            float left
          > .trending-url-cell
            background-color logoLightBlue
            width 80%   
          > .trending-url-count-cell
            min-width 20%
    > h1
      color navBarNavy
      font-family lobster
      margin 0 1rem
  > #chat-box
    background-color lightGrey
    border 1px solid mediumGrey
    padding .4rem
    > div, input
      border 1px solid mediumGrey
      padding 0 .5rem
    > #chat-window
      text-align left
      height 12.5rem
      background-color white
      margin-bottom .2rem
      overflow-y auto
      overflow-wrap break-word
    > #message-form
      > input
        width 100%
