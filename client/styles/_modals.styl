@import '_colorsfontsstyles.styl'

.modal-backdrop
  position fixed
  display flex
  justify-content center
  align-items center
  z-index 1
  left 0
  top 0
  width 100%
  height 100%
  overflow auto
  background-color rgb(42, 79, 110)
  background-color rgba(42, 79, 110,0.5)

.modal
  background-color white    
  display block
  width 30rem
  overflow-y auto
  overflow-wrap break-word
  box-shadow lightGreyShadow

.modal-header
  height 3rem
.modal-footer
  height 2rem
.modal-header 
.modal-footer
