@import '_colorsfontsstyles.styl'

.logo
  text-align center
  > a
    text-decoration none
    font-family lobster
    color logoLightBlue
    > span
      font-family logoBlocky
      font-size 3rem
      color navBarNavy

#nav-bar
  font-family slimBlocky
  font-size 1rem
  background-color navBarNavy
  margin-bottom 2rem
  > a
    text-decoration none
    color white
    display inline-block
    margin 1rem 1rem
  a:first-child
    margin-left: 2rem
  a:last-child  
    margin-right: 2rem

#footer::before
  background-color blue
#footer
  position absolute
  display flex
  justify-content center
  align-items center
  bottom 0
  width 100%
  height 3rem
  background-color darkestBlue
  color white
  text-align center
  font-family lobster
  font-size 1.2rem
  box-shadow lightGreyShadow
  